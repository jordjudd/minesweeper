<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Minesweeper</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; background-color: #f0f0f0; }
        .game-container { max-width: 600px; margin: 0 auto; text-align: center; }
        .game-info { margin: 20px 0; }
        .difficulty-selector { 
            margin: 10px 0; 
        }
        .difficulty-selector label {
            font-weight: bold;
            margin-right: 10px;
        }
        .difficulty-selector select {
            padding: 5px 10px;
            font-size: 14px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }
        .game-board { 
            display: inline-block; 
            border: 3px solid #999; 
            background-color: #c0c0c0; 
            padding: 5px;
            box-sizing: border-box;
            max-width: 95vw;
            overflow-x: auto;
            white-space: nowrap;
        }
        .cell { 
            width: 28px; 
            height: 28px; 
            border: 2px outset #c0c0c0; 
            background-color: #c0c0c0; 
            display: inline-block; 
            text-align: center; 
            line-height: 24px; 
            font-weight: bold; 
            cursor: pointer; 
            user-select: none;
            box-sizing: border-box;
            font-size: 13px;
            vertical-align: top;
            margin: 0;
            padding: 0;
        }
        .cell.revealed { 
            border: 1px inset #c0c0c0; 
            background-color: #e0e0e0; 
            cursor: default;
        }
        .cell.mine { 
            background-color: #ff0000; 
            color: white;
        }
        .cell.flagged { 
            background-color: #ffff00; 
        }
        .row { 
            display: block; 
            height: 28px; 
            line-height: 28px;
            margin: 0;
            padding: 0;
            white-space: nowrap;
        }
        .controls { margin: 20px 0; }
        button { 
            padding: 10px 20px; 
            font-size: 16px; 
            cursor: pointer; 
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
        }
        button:hover { background-color: #45a049; }
        .status { font-size: 18px; font-weight: bold; margin: 10px 0; }
        .won { color: green; }
        .lost { color: red; }
        .game-over-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }
        .game-over-message {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
        }
        .game-over-message button {
            margin-top: 20px;
            font-size: 18px;
            padding: 15px 30px;
        }
    </style>
</head>
<body>
    <div class="game-container">
        @RenderBody()
    </div>
    
    <!-- Game Over Overlay -->
    <div class="game-over-overlay" id="gameOverOverlay">
        <div class="game-over-message" id="gameOverMessage">
            <div id="gameOverText"></div>
            <button onclick="startNewGame()">New Game</button>
        </div>
    </div>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>